extends ../../layouts/master

block title
    | Sparkle Line

block extra-css

block extra-js
    script(type='text/javascript' src='/assets/plugins/jquery-sparkline/jquery.sparkline.min.js')
    script(type='text/javascript' src='/assets/js/pages/charts/sparkline.js')

block content
    .container-fluid
        .block-header
            h2
                | SPARKLINE CHART
                small
                    | Taken from&nbsp;
                    a(href='http://omnipotent.net/jquery.sparkline' target='_blank') omnipotent.net/jquery.sparkline
        .row.clearfix
            // Line Chart
            .col-xs-12.col-sm-12.col-md-4.col-lg-4
                .card
                    .header
                        h2 LINE CHART
                        ul.header-dropdown.m-r--5
                            li.dropdown
                                a.dropdown-toggle(href='javascript:void(0);' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false')
                                    i.material-icons more_vert
                                ul.dropdown-menu.pull-right
                                    li
                                        a(href='javascript:void(0);') Action
                                    li
                                        a(href='javascript:void(0);') Another action
                                    li
                                        a(href='javascript:void(0);') Something else here
                    .body
                        .sparkline(data-type='line' data-spot-radius='3' data-highlight-spot-color='rgb(233, 30, 99)' data-highlight-line-color='#222' data-min-spot-color='rgb(233, 30, 99)' data-max-spot-color='rgb(0, 150, 136)' data-spot-color='rgb(0, 188, 212)' data-offset='90' data-width='100%' data-height='150px' data-line-width='2' data-line-color='rgb(0, 188, 212)' data-fill-color='rgba(0, 188, 212, 0.3)')
                            | 6,4,7,8,4,3,2,2,5,6,7,4,1,5,7,9,9,8,7,6
            // #END# Line Chart
            // Bar Chart
            .col-xs-12.col-sm-12.col-md-4.col-lg-4
                .card
                    .header
                        h2 BAR CHART
                        ul.header-dropdown.m-r--5
                            li.dropdown
                                a.dropdown-toggle(href='javascript:void(0);' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false')
                                    i.material-icons more_vert
                                ul.dropdown-menu.pull-right
                                    li
                                        a(href='javascript:void(0);') Action
                                    li
                                        a(href='javascript:void(0);') Another action
                                    li
                                        a(href='javascript:void(0);') Something else here
                    .body
                        .sparkline(data-type='bar' data-width='97%' data-height='150px' data-bar-width='16' data-bar-spacing='7' data-bar-color='rgb(0, 188, 212)')
                            | 6,7,8,9,10,5,13,18,21,7,9,11,12,5
            // #END# Bar Chart
            // Pie Chart
            .col-xs-12.col-sm-12.col-md-4.col-lg-4
                .card
                    .header
                        h2 PIE CHART
                        ul.header-dropdown.m-r--5
                            li.dropdown
                                a.dropdown-toggle(href='javascript:void(0);' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false')
                                    i.material-icons more_vert
                                ul.dropdown-menu.pull-right
                                    li
                                        a(href='javascript:void(0);') Action
                                    li
                                        a(href='javascript:void(0);') Another action
                                    li
                                        a(href='javascript:void(0);') Something else here
                    .body.align-center
                        .sparkline-pie 6,4,8
            // #END# Pie Chart
        // All Examples
        .row.clearfix
            .col-lg-12.col-md-12.col-sm-12.col-xs-12
                .card
                    .header
                        h2 ALL EXAMPLES
                        ul.header-dropdown.m-r--5
                            li.dropdown
                                a.dropdown-toggle(href='javascript:void(0);' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false')
