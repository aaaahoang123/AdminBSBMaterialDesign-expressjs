                    .body
                        form#wizard_with_validation(method='POST')
                            h3 Account Information
                            fieldset
                                .form-group.form-float
                                    .form-line
                                        input.form-control(type='text' name='username' required='')
                                        label.form-label Username*
                                .form-group.form-float
                                    .form-line
                                        input#password.form-control(type='password' name='password' required='')
                                        label.form-label Password*
                                .form-group.form-float
                                    .form-line
                                        input.form-control(type='password' name='confirm' required='')
                                        label.form-label Confirm Password*
                            h3 Profile Information
                            fieldset
                                .form-group.form-float
                                    .form-line
                                        input.form-control(type='text' name='name' required='')
                                        label.form-label First Name*
                                .form-group.form-float
                                    .form-line
                                        input.form-control(type='text' name='surname' required='')
                                        label.form-label Last Name*
                                .form-group.form-float
                                    .form-line
                                        input.form-control(type='email' name='email' required='')
                                        label.form-label Email*
                                .form-group.form-float
                                    .form-line
                                        textarea.form-control.no-resize(name='address' cols='30' rows='3' required='')
                                        label.form-label Address*
                                .form-group.form-float
                                    .form-line
                                        input.form-control(min='18' type='number' name='age' required='')
                                        label.form-label Age*
                                    .help-info The warning step will show up if age is less than 18
                            h3 Terms &amp; Conditions - Finish
                            fieldset
                                input#acceptTerms-2(name='acceptTerms' type='checkbox' required='')
                                label(for='acceptTerms-2') I agree with the Terms and Conditions.
