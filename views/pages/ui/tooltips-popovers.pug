extends ../../layouts/master

block title
    | Tooltips and Popovers

block extra-css

block extra-js
    script(type='text/javascript' src='/assets/js/pages/ui/tooltips-popovers.js')

block content
    .container-fluid
        // Tooltips
        .row.clearfix
            .col-lg-12.col-md-12.col-sm-12.col-xs-12
                .card
                    .header
                        h2
                            | TOOLTIPS
                            small Hover over the buttons below to see tooltips:
                        ul.header-dropdown.m-r--5
                            li.dropdown
                                a.dropdown-toggle(href='javascript:void(0);' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false')
                                    i.material-icons more_vert
                                ul.dropdown-menu.pull-right
                                    li
                                        a(href='javascript:void(0);') Action
                                    li
                                        a(href='javascript:void(0);') Another action
                                    li
                                        a(href='javascript:void(0);') Something else here
                    .body
                        .row.clearfix
                            .col-xs-6.col-sm-3.col-md-3.col-lg-3
                                button.btn.btn-primary.btn-block.waves-effect(type='button' data-toggle='tooltip' data-placement='right' title='Tooltip on right') TOOLTIP ON RIGHT
                            .col-xs-6.col-sm-3.col-md-3.col-lg-3
                                button.btn.btn-primary.btn-block.waves-effect(type='button' data-toggle='tooltip' data-placement='top' title='Tooltip on top') TOOLTIP ON TOP
                            .col-xs-6.col-sm-3.col-md-3.col-lg-3
                                button.btn.btn-primary.btn-block.waves-effect(type='button' data-toggle='tooltip' data-placement='bottom' title='Tooltip on bottom') TOOLTIP ON BOTTOM
                            .col-xs-6.col-sm-3.col-md-3.col-lg-3
                                button.btn.btn-primary.btn-block.waves-effect(type='button' data-toggle='tooltip' data-placement='left' title='Tooltip on left') TOOLTIP ON LEFT
        // #END# Tooltips
        // Popovers
        .row.clearfix
            .col-lg-12.col-md-12.col-sm-12.col-xs-12
                .card
                    .header
                        h2
                            | POPOVERS
                            small
                                | Add small overlays of content, like those on the iPad, to any element for housing secondary information. Click over the buttons below to see popovers:
                        ul.header-dropdown.m-r--5
                            li.dropdown
                                a.dropdown-toggle(href='javascript:void(0);' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false')
                                    i.material-icons more_vert
                                ul.dropdown-menu.pull-right
                                    li
                                        a(href='javascript:void(0);') Action
                                    li
                                        a(href='javascript:void(0);') Another action
                                    li
                                        a(href='javascript:void(0);') Something else here
                    .body
                        .row.clearfix
                            .col-xs-6.col-sm-3.col-md-3.col-lg-3
                                button.btn.btn-primary.btn-block.waves-effect(type='button' data-trigger='focus' data-container='body' data-toggle='popover' data-placement='right' title='Popover Title' data-content='Vivamus sagittis lacus vel augue laoreet rutrum faucibus.')
                                    | POPOVER ON RIGHT
                            .col-xs-6.col-sm-3.col-md-3.col-lg-3
                                button.btn.btn-primary.btn-block.waves-effect(type='button' data-trigger='focus' data-container='body' data-toggle='popover' data-placement='top' title='Popover Title' data-content='Vivamus sagittis lacus vel augue laoreet rutrum faucibus.')
                                    | POPOVER ON TOP
                            .col-xs-6.col-sm-3.col-md-3.col-lg-3
                                button.btn.btn-primary.btn-block.waves-effect(type='button' data-trigger='focus' data-container='body' data-toggle='popover' data-placement='bottom' title='Popover Title' data-content='Vivamus sagittis lacus vel augue laoreet rutrum faucibus.')
                                    | POPOVER ON BOTTOM
                            .col-xs-6.col-sm-3.col-md-3.col-lg-3
                                button.btn.btn-primary.btn-block.waves-effect(type='button' data-trigger='focus' data-container='body' data-toggle='popover' data-placement='left' title='Popover Title' data-content='Vivamus sagittis lacus vel augue laoreet rutrum faucibus.')
                                    | POPOVER ON LEFT
        // #END# Popovers