extends ../../../layouts/master

block title
    | Info Box 5

block extra-css

block extra-js
    script(type='text/javascript' src='/assets/plugins/jquery-countto/jquery.countTo.js')
    script(type='text/javascript' src='/assets/plugins/jquery-sparkline/jquery.sparkline.js')
    script(type='text/javascript' src='/assets/js/helpers.js')
    script(type='text/javascript' src='/assets/js/pages/widgets/infobox/infobox-5.js')

block content
    .container-fluid
        // Counter Examples
        .block-header
            h2
                | COUNTER ANIMATION
                small
                    | Taken from&nbsp;
                    a(href='https://github.com/mhuggins/jquery-countTo' target='_blank') github.com/mhuggins/jquery-countTo
        .row
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4
                    .icon
                        i.material-icons.col-red shopping_cart
                    .content
                        .text NEW ORDERS
                        .number.count-to(data-from='0' data-to='125' data-speed='1000' data-fresh-interval='20') 125
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4
                    .icon
                        i.material-icons.col-indigo face
                    .content
                        .text NEW MEMBERS
                        .number.count-to(data-from='0' data-to='257' data-speed='1000' data-fresh-interval='20') 257
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4
                    .icon
                        i.material-icons.col-purple bookmark
                    .content
                        .text BOOKMARKS
                        .number.count-to(data-from='0' data-to='117' data-speed='1000' data-fresh-interval='20')
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4
                    .icon
                        i.material-icons.col-deep-purple favorite
                    .content
                        .text LIKES
                        .number.count-to(data-from='0' data-to='1432' data-speed='1500' data-fresh-interval='20')
        // #END# Counter Examples
        // Hover Zoom Effect
        .block-header
            h2 HOVER ZOOM EFFECT
        .row
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4.hover-zoom-effect
                    .icon
                        i.material-icons.col-pink email
                    .content
                        .text MESSAGES
                        .number 15
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4.hover-zoom-effect
                    .icon
                        i.material-icons.col-blue devices
                    .content
                        .text CPU USAGE
                        .number 92%
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4.hover-zoom-effect
                    .icon
                        i.material-icons.col-light-blue access_alarm
                    .content
                        .text ALARM
                        .number 07:00 AM
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4.hover-zoom-effect
                    .icon
                        i.material-icons.col-cyan gps_fixed
                    .content
                        .text LOCATION
                        .number Turkey
        // #END# Hover Zoom Effect
        // Hover Expand Effect
        .block-header
            h2 HOVER EXPAND EFFECT
        .row
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4.hover-expand-effect
                    .icon
                        i.material-icons.col-teal equalizer
                    .content
                        .text BOUNCE RATE
                        .number 62%
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4.hover-expand-effect
                    .icon
                        i.material-icons.col-green flight_takeoff
                    .content
                        .text FLIGHT
                        .number 02:59 PM
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4.hover-expand-effect
                    .icon
                        i.material-icons.col-light-green battery_charging_full
                    .content
                        .text BATTERY
                        .number Charging
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4.hover-expand-effect
                    .icon
                        i.material-icons.col-lime brightness_low
                    .content
                        .text BRIGHTNESS RATE
                        .number 40%
        // #END# Hover Expand Effect
        // Chart Samples
        .block-header
            h2 CHART SAMPLES
        .row
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4
                    .icon
                        .chart.chart-bar(data-chartcolor='yellow') 6,8,6,8,10
                    .content
                        .text WEBSITE TRAFFICS
                        .number 127 526
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4
                    .icon
                        .chart.chart-bar(data-chartcolor='amber') 6,8,6,8,10
                    .content
                        .text WEBSITE IMPRESSIONS
                        .number 457 512
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4
                    .icon
                        .chart.chart-pie(data-chartcolor='orange') 30, 35, 25, 8
                    .content
                        .text USAGE
                        .number 98%
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4
                    .icon
                        .chart.chart-pie(data-chartcolor='deepOrange') 30, 35, 25, 10
                    .content
                        .text USAGE
                        .number 100%
        .row
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4
                    .icon
                        span.chart.chart-line(data-chartcolor='brown') 9,4,6,5,6,4,7,3
                    .content
                        .text DAILY SALES
                        .number $12 526
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4
                    .icon
                        span.chart.chart-line(data-chartcolor='grey') 9,4,6,5,6,4,7,3
                    .content
                        .text TOTAL SALES
                        .number $125 543
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4
                    .icon
                        .chart.chart-bar(data-chartcolor='blueGrey') 4,6,-3,-1,2,-2,4,6
                    .content
                        .text CURRENCY
                        .number $1 063
            .col-lg-3.col-md-3.col-sm-6.col-xs-12
                .info-box-4
                    .icon
                        .chart.chart-bar(data-chartcolor='black') 4,6,-3,-1,2,-2,4,6
                    .content
                        .text CURRENCY
                        .number $1 125
        // #END# Chart Samples
